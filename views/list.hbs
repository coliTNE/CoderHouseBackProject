<main>
  <h2>Lista de Productos</h2>
  <div class="list">
    {{#each productos}}
      <div class="list__container">
        <div class="list__col"><img
            src={{this.thumbnail}}
            alt={{this.title}}
          /></div>
        <div class="list__col">
          <h3 class="list__subtitle">{{this.title}}</h3>
          <h3 class="list__subtitle">{{this.price}}</h3>
        </div>
      </div>
    {{/each}}
  </div>

</main>